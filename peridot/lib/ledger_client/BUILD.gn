group("ledger_client") {
  deps = [
    ":constants",
    ":operations",
    ":page_client",
    ":promise",
    ":types",
  ]
}

source_set("constants") {
  sources = [
    "constants.h",
  ]
}

source_set("operations") {
  sources = [
    "operations.h",
  ]

  public_deps = [
    ":page_client",
    "//garnet/public/lib/fsl",
    "//peridot/lib/fidl:array_to_string",
    "//peridot/lib/fidl:json_xdr",
    "//peridot/public/lib/async/cpp:operation",
    "//sdk/fidl/fuchsia.ledger",
    "//src/lib/fxl",
  ]
}

source_set("page_client") {
  sources = [
    "ledger_client.cc",
    "ledger_client.h",
    "page_client.cc",
    "page_client.h",
    "page_id.cc",
    "page_id.h",
  ]

  deps = [
    ":types",
    "//garnet/public/lib/fsl",
    "//peridot/lib/fidl:array_to_string",
    "//peridot/lib/fidl:clone",
    "//peridot/public/lib/async/cpp:operation",
    "//sdk/lib/fidl/cpp",
    "//src/ledger/bin/fidl",
    "//src/lib/fxl",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.ledger",
    "//src/ledger/bin/fidl",
  ]
}

source_set("promise") {
  sources = [
    "promise.h",
  ]

  public_deps = [
    "//peridot/lib/fidl:array_to_string",
    "//sdk/fidl/fuchsia.ledger",
  ]
}

source_set("types") {
  sources = [
    "types.h",
  ]

  deps = [
    "//sdk/lib/fidl/cpp",
  ]
}

group("unittests") {
  testonly = true

  deps = [
    ":page_client_unittest",
  ]
}

source_set("page_client_unittest") {
  testonly = true

  sources = [
    "page_client_unittest.cc",
  ]

  deps = [
    ":page_client",
    "//garnet/public/lib/fsl",
    "//peridot/lib/fidl:array_to_string",
    "//peridot/lib/testing:test_with_ledger",
    "//peridot/public/lib/async/cpp:operation",
    "//src/lib/fxl",
    "//third_party/googletest:gtest",
  ]
}
