import("//build/package.gni")

package("tones") {
  deps = [
    ":tones_bin",
  ]

  binaries = [
    {
      name = "tones"
      shell = true
    },
  ]

  meta = [
    {
      path = rebase_path("meta/tones.cmx")
      dest = "tones.cmx"
    },
  ]
}
executable("tones_bin") {
  output_name = "tones"

  sources = [
    "main.cc",
    "midi_keyboard.cc",
    "tone_generator.cc",
    "tone_generator.h",
    "tones.cc",
    "tones.h",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//sdk/fidl/fuchsia.media",
    "//sdk/lib/media/cpp",
    "//sdk/lib/sys/cpp",
    "//src/lib/fxl",
    "//zircon/public/fidl/fuchsia-hardware-midi:fuchsia-hardware-midi_c",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fit",
    "//zircon/public/lib/fzl",
  ]
}
