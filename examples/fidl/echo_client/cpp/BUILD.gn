import("//build/package.gni")

executable("unified_echo_client") {
  sources = [
    "main.cc",
  ]

  deps = [
    "//examples/fidl/gen",
    "//sdk/lib/sys/cpp",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("echo_client") {
  deps = [
    ":unified_echo_client",
  ]

  binaries = [
    {
      name = "unified_echo_client"
      dest = "echo_client"
    },
  ]

  meta = [
    {
      path = rebase_path("../meta/echo_client.cmx")
      dest = "echo_client.cmx"
    },
  ]
}
