library zz;

[Transport="Syscall"]
protocol Timer {
    /// Create a timer.
    [Out1="handle<timer>:acquire"]
    Create(uint32 options, ClockKind clock) -> (status status, handle<timer> out);

    /// Start a timer.
    [In0="handle<timer>:rights=WRITE"]
    Set(handle<timer> handle, time deadline, duration slack) -> (status status);

    /// Cancel a timer.
    [In0="handle<timer>:rights=WRITE"]
    Cancel(handle<timer> handle) -> (status status);
};
