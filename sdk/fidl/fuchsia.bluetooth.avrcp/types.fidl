    KEY_0 = 0x20;
    KEY_1 = 0x21;
    KEY_2 = 0x22;
    KEY_3 = 0x23;
    KEY_4 = 0x24;
    KEY_5 = 0x25;
    KEY_6 = 0x26;
    KEY_7 = 0x27;
    KEY_8 = 0x28;
    KEY_9 = 0x29;
    DOT = 0x2a;
    ENTER = 0x2b;
    CHANNEL_UP = 0x30;
    CHANNEL_DOWN = 0x31;
    CHANNEL_PREVIOUS = 0x32;
    INPUT_SELECT = 0x34;
    INFO = 0x35;
    HELP = 0x36;
    PAGE_UP = 0x37;
    PAGE_DOWN = 0x38;
    LOCK = 0x3a;
    POWER = 0x40;
