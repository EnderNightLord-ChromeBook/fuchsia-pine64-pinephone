import("//build/config.gni")
import("//build/package.gni")

executable("bin") {
  output_name = "mem"
  sources = [
    "main.cc",
  ]
  deps = [
    "//sdk/lib/sys/cpp",
    "//src/developer/memory/metrics",
    "//src/lib/fxl",
  ]
}

package("mem") {
  deps = [
    ":bin",
  ]
  binaries = [
    {
      name = "mem"
      shell = true
    },
  ]
}
