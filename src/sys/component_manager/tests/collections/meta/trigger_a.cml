// Integration test component that runs a Trigger service. When triggered, the
// component echoes a string using the Echo service and prints it.
{
    "program": {
        "binary": "bin/trigger",
        "args": [ "Triggered", "a" ],
    },
    "use": [
        {
            "legacy_service": "/svc/fidl.examples.routing.echo.Echo",
        },
    ],
    "expose": [
        {
            "legacy_service": "/svc/fidl.test.components.Trigger",
            "from": "self",
        },
    ],
}
