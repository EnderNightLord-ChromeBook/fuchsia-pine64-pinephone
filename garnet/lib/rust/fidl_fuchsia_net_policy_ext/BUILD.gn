rustc_library("fidl_fuchsia_net_policy_ext") {
  with_unit_tests = true
  edition = "2018"
  deps = [
    "//garnet/lib/rust/fidl_fuchsia_net_stack_ext",
    "//sdk/fidl/fuchsia.net.policy:fuchsia.net.policy-rustc",
