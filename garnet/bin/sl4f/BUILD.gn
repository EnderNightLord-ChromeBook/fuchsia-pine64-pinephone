package("sl4f") {
  deprecated_shell = "//build"

  meta = [
    {
      path = "meta/sl4f.cmx"
      dest = "sl4f.cmx"
    },
  ]

  deps = [
    ":bin",
  ]

  binary = "sl4f"
}

unittest_package("sl4f-tests") {
  deps = [
    ":bin_test",
  ]

  tests = [
    {
      name = "sl4f_bin_test"
      dest = "sl4f_bin_test"
      environments = basic_envs
    },
  ]
}

config_data("sl4f_sysmgr_config") {
  for_pkg = "sysmgr"
  outputs = [
    "sl4f.config",
  ]
  sources = [
    "config/sl4f_sysmgr.config",
  ]
}
