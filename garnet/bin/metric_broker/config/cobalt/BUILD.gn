source_set("types") {
  sources = [
    "types.cc",
    "types.h",
  ]
}

source_set("event_codes") {
  sources = [
    "event_codes.cc",
    "event_codes.h",
  ]

  deps = [
    ":types",
  ]
}

source_set("metric_config") {
  sources = [
    "metric_config.cc",
    "metric_config.h",
  ]

  deps = [
    ":event_codes",
    ":types",
  ]
}

source_set("project_config") {
  sources = [
    "project_config.cc",
    "project_config.h",
  ]

  deps = [
    ":event_codes",
    ":metric_config",
    ":types",
    "//garnet/bin/metric_broker/config:registry",
  ]
}

source_set("cobalt_config_reader") {
  sources = [
    "cobalt_config_reader.cc",
    "cobalt_config_reader.h",
  ]

  deps = [
    ":event_codes",
    ":metric_config",
    ":project_config",
    ":types",
    "//garnet/bin/metric_broker/config:json_reader",
    "//third_party/rapidjson",
  ]
}

group("cobalt") {
  public_deps = [
    ":cobalt_config_reader",
    ":event_codes",
    ":metric_config",
    ":project_config",
    ":types",
  ]
}
