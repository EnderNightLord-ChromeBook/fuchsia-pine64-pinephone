test_package("go_tuf_tests") {
  deps = []
  tests = []
  foreach(test, test_targets) {
    deps += [ ":${test}" ]
    tests += [
      {
        name = test
        environments = basic_envs
      },
    ]
  }
}

group("go_tuf_host_tests") {
  testonly = true
  deps = []
  foreach(test, test_targets) {
    deps += [ ":${test}" ]
  }
}
